{
  "mcp_server_name": "MCP-Wazuh-Bridge",
  "version": "1.0.0",
  "description": "Metadata and capability manifest for the MCP Server integrated with Wazuh SIEM.",

  "tools": [
    {
      "name": "wazuh-get-alerts",
      "description": "Fetch recent Wazuh alerts from API.",
      "endpoint": "/api/v1/wazuh/alerts",
      "method": "GET",
      "requires_auth": true
    },
    {
      "name": "wazuh-get-agents",
      "description": "Fetch all Wazuh agents and their status.",
      "endpoint": "/api/v1/wazuh/agents",
      "method": "GET",
      "requires_auth": true
    },
    {
      "name": "wazuh-restart-manager",
      "description": "Restart Wazuh Manager service through API.",
      "endpoint": "/api/v1/wazuh/manager/restart",
      "method": "POST",
      "requires_auth": true
    },
    {
      "name": "health-check",
      "description": "Check connectivity between MCP and Wazuh Indexer/Manager.",
      "endpoint": "/api/v1/mcp/health",
      "method": "GET",
      "requires_auth": false
    }
  ],
  "wazuh_config": {
    "api_host": "env:WAZUH_API_HOST",
    "api_port": "env:WAZUH_API_PORT",
    "indexer_host": "env:WAZUH_INDEXER_HOST",
    "indexer_port": "env:WAZUH_INDEXER_PORT",
    "verify_ssl": "env:WAZUH_VERIFY_SSL"
  },
  "authentication": {
    "wazuh_api_username": "env:WAZUH_API_USERNAME",
    "wazuh_api_password": "env:WAZUH_API_PASSWORD",
    "token_refresh_minutes": 10
  },
  "logging": {
    "enabled": true,
    "level": "INFO",
    "file": "logs/mcp_wazuh_server.log"
  }
"schemas": {
  "alert_query": {
    "fields": ["agent_id", "severity", "limit"]
  }
}

